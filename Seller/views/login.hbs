        <form class="login-form" id="login-id" action="/auth/login" method="post">
          <h2>Login</h2>
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" name="username_S" id="username_S" placeholder="Enter your name" style="width: 350px;">
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="Enter your password" style="width: 350px;">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
          {{#if message}}
          <h1>{{message}}</h1>
          {{/if}}
        </form>
      </div>
    </div>
