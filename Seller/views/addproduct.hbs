    <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <form class="login-form" id="login-id" action="/auth/addproduct" method="post" enctype="multipart/form-data">
          <h2>Add Product Details</h2>
          <div class="mb-3">
          <label for="cars">Categories</label>
            <select name="categori" id="cars">
            <option value="electronics">Electronics</option>
            <option value="grocery">Groceries</option>
            <option value="fashion">Fashion</option>
            <option value="health">Health and Wellness</option>
            </select>
            </div>
          <div class="mb-3">
            <label for="Product_name" class="form-label">Product Name</label>
            <input type="text" class="form-control" name="Product_name" style="width: 350px;">
          </div>
          <div class="mb-3">
            <label for="Productprice" class="form-label">Product Price</label>
            <input type="number" class="form-control" name="Product_price" style="width: 350px;">
          </div>
          <div class="mb-3">
            <label for="productimage" class="form-label">Product Image</label>
            <input type="file" class="form-control" name="files" style="width: 350px;">
          </div>
          <div class="mb-3">
            <label for="brandid" class="form-label">Product BrandID</label>
            <input type="text" class="form-control" name="Product_location" style="width: 350px;">
          </div>
          <div class="mb-3">
            <label for="weight" class="form-label">Product Weight</label>
            <input type="number" class="form-control" style="width: 350px;">
          </div>
          <div class="mb-3">
            <label for="stock" class="form-label">Product Stock</label>
            <input type="number" class="form-control" name="Product_stock" style="width: 350px;">
          </div>
          <div class="mb-3">
            <label for="stock" class="form-label">Product Location</label>
            <input type="number" class="form-control" name="Product_location" style="width: 350px;">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
          {{#if message}}
          <h1>{{message}}</h1>
          {{/if}}
        </form>
      </div>
    </div>
