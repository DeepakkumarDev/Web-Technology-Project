          <a class="nav-link" href="feedback">Feedback</a>
        </li>
      </ul>
    </div>
  </nav>
  <div id="getdata">
  <form action="/auth/addproduct" method="post" enctype="multipart/form-data" class="container">
    <div class="form-group">
      <label for="cars">Categories</label>
      <select name="categori" id="cars" class="form-control">
        <option value="electronics">Electronics</option>
        <option value="grocery">Groceries</option>
        <option value="fashion">Fashion</option>
      </select>
    </div>
    <div class="form-group">
      <label for="productName">Product Name</label>
      <input type="text" name="Product_name" id="productName" class="form-control">
    </div>
    <div class="form-group">
      <label for="productPrice">Product Price</label>
      <input type="number" name="Product_price" id="productPrice" class="form-control">
    </div>
    <div class="form-group">
      <label for="productImage">Product Image</label>
      <input type="file" name="files" id="productImage" class="form-control-file">
    </div>
    <div class="form-group">
      <label for="productBrandID">Product BrandID</label>
      <input type="text" name="Product_BrandID" id="productBrandID" class="form-control">
    </div>
    <div class="form-group">
      <label for="productWeight">Product Weight</label>
      <input type="number" name="Product_weight" id="productWeight" class="form-control">
    </div>
    <div class="form-group">
      <label for="productStock">Product Stock</label>
      <input type="number" name="Product_stock" id="productStock" class="form-control">
    </div>
    <div class="form-group">
      <label for="productLocation">Product Location</label>
      <input type="text" name="Product_location" id="productLocation" class="form-control">
    </div>
    <div class="form-group">
      <input type="submit" class="btn btn-primary" value="Submit">
    </div>
    {{#if message}}
    <h1>{{message}}</h1>
    {{/if}}
  </form>
</div>

  <h1>card</h1>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>

</html>